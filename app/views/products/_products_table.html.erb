<% if @product_prices_by_day.any? %>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Товар</th>
        <% dates_range.each do |date| %>
          <th><%= date.strftime("%d.%m") %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @product_prices_by_day.each do |product_data| %>
        <tr>
          <td>
            <% if product_data[:product].image_url.present? %>
              <%= link_to image_tag(product_data[:product].image_url), product_data[:product].url, target: "_blank" %><br>
            <% end %>
            <%= link_to product_data[:product].name, product_data[:product].url, target: "_blank" %>
          </td>
          <% product_data[:prices_by_day].each do |price| %>
            <td><%= price %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p> Товара нет в базе данных.</p>
<% end %>
